{% extends 'base.html.twig' %}

{% block title %}Post - Mini Facebook{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8">
        <a href="{{ path('app_home') }}" class="btn btn-secondary mb-3">
            <i class="bi bi-arrow-left"></i> Retour à l'accueil
        </a>

        <div class="card shadow">
            <div class="card-header bg-light">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <strong><i class="bi bi-person-circle"></i> {{ post.author.getFullName() }}</strong>
                        <small class="text-muted d-block">{{ post.createdAt|date('d/m/Y à H:i') }}</small>
                    </div>
                    {% if post.author == app.user %}
                        <form method="post" action="{{ path('app_post_delete', {id: post.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce post ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i> Supprimer
                            </button>
                        </form>
                    {% endif %}
                </div>
            </div>
            <div class="card-body">
                <p class="card-text">{{ post.content|nl2br }}</p>
            </div>
            <div class="card-footer bg-white">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    {% if app.user %}
                        <form method="post" action="{{ path('app_post_like', {id: post.id}) }}" class="d-inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('like' ~ post.id) }}">
                            <button type="submit" class="btn btn-sm {{ post.isLikedBy(app.user) ? 'btn-danger' : 'btn-outline-danger' }}">
                                <i class="bi bi-heart{{ post.isLikedBy(app.user) ? '-fill' : '' }}"></i>
                                {{ post.getLikesCount() }}
                            </button>
                        </form>
                    {% else %}
                        <span class="btn btn-sm btn-outline-danger disabled">
                            <i class="bi bi-heart"></i>
                            {{ post.getLikesCount() }}
                        </span>
                    {% endif %}
                    <span class="text-muted">
                        <i class="bi bi-chat-dots"></i> {{ post.comments|length }} commentaire(s)
                    </span>
                </div>

                <hr>

                <h6>Commentaires</h6>
                {% for comment in post.comments %}
                    <div class="comment mb-3 p-3 bg-light rounded">
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="flex-grow-1">
                                <strong>{{ comment.author.getFullName() }}</strong>
                                <small class="text-muted ms-2">{{ comment.createdAt|date('d/m/Y H:i') }}</small>
                                <p class="mb-0 mt-2">{{ comment.content|nl2br }}</p>
                            </div>
                            {% if comment.author == app.user %}
                                <form method="post" action="{{ path('app_comment_delete', {id: comment.id}) }}" onsubmit="return confirm('Supprimer ce commentaire ?');" class="ms-2">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}

                {% if app.user %}
                    {% set comment = commentForms[post.id]|default(null) %}
                    {% if comment %}
                        <form method="post" action="{{ path('app_comment_new', {id: post.id}) }}" class="mt-3">
                            {{ form_start(comment) }}
                            <div class="input-group">
                                {{ form_widget(comment.content, {'attr': {'class': 'form-control', 'placeholder': 'Écrivez un commentaire...'}}) }}
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-send"></i> Commenter
                                </button>
                            </div>
                            {{ form_end(comment) }}
                        </form>
                    {% endif %}
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
