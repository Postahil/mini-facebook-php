{% extends 'base.html.twig' %}

{% block title %}Accueil - Mini Facebook{% endblock %}

{% block body %}
{% if app.user %}
<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card mb-4 shadow-sm">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-pencil-square"></i> Créer un nouveau post</h5>
                <p class="text-muted">Partagez quelque chose avec vos amis...</p>
                <a href="{{ path('app_post_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Nouveau Post
                </a>
            </div>
        </div>

        {% if posts is empty %}
            <div class="alert alert-info text-center">
                <i class="bi bi-info-circle"></i> Aucun post pour le moment. Soyez le premier à publier !
            </div>
        {% else %}
            {% for post in posts %}
                <div class="card mb-3 shadow-sm">
                    <div class="card-header bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <strong><i class="bi bi-person-circle"></i> {{ post.author.getFullName() }}</strong>
                                <small class="text-muted d-block">{{ post.createdAt|date('d/m/Y à H:i') }}</small>
                            </div>
                            {% if post.author == app.user %}
                                <form method="post" action="{{ path('app_post_delete', {id: post.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce post ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            {% endif %}
                        </div>
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{ post.content|nl2br }}</p>
                    </div>
                    <div class="card-footer bg-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                {% if app.user %}
                                    <form method="post" action="{{ path('app_post_like', {id: post.id}) }}" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('like' ~ post.id) }}">
                                        <button type="submit" class="btn btn-sm {{ post.isLikedBy(app.user) ? 'btn-danger' : 'btn-outline-danger' }}">
                                            <i class="bi bi-heart{{ post.isLikedBy(app.user) ? '-fill' : '' }}"></i>
                                            {{ post.getLikesCount() }}
                                        </button>
                                    </form>
                                {% else %}
                                    <span class="btn btn-sm btn-outline-danger disabled">
                                        <i class="bi bi-heart"></i>
                                        {{ post.getLikesCount() }}
                                    </span>
                                {% endif %}
                                <span class="ms-2 text-muted">
                                    <i class="bi bi-chat-dots"></i> {{ post.comments|length }} commentaire(s)
                                </span>
                            </div>
                        </div>

                        <hr>

                        <div class="comments-section">
                            {% for comment in post.comments %}
                                <div class="comment mb-2 p-2 bg-light rounded">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <strong>{{ comment.author.getFullName() }}</strong>
                                            <small class="text-muted ms-2">{{ comment.createdAt|date('d/m/Y H:i') }}</small>
                                            <p class="mb-0 mt-1">{{ comment.content|nl2br }}</p>
                                        </div>
                                        {% if comment.author == app.user %}
                                            <form method="post" action="{{ path('app_comment_delete', {id: comment.id}) }}" onsubmit="return confirm('Supprimer ce commentaire ?');" class="ms-2">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        {% endif %}
                                    </div>
                                </div>
                            {% endfor %}

                            {% if app.user and commentForms[post.id] is defined %}
                            <form method="post" action="{{ path('app_comment_new', {id: post.id}) }}" class="mt-3">
                                {{ form_start(commentForms[post.id]) }}
                                <div class="input-group">
                                    {{ form_widget(commentForms[post.id].content, {'attr': {'class': 'form-control', 'placeholder': 'Écrivez un commentaire...'}}) }}
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-send"></i> Commenter
                                    </button>
                                </div>
                                {{ form_end(commentForms[post.id]) }}
                            </form>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>
</div>
{% else %}
<div class="row justify-content-center">
    <div class="col-md-8 text-center">
        <div class="jumbotron bg-light p-5 rounded">
            <h1 class="display-4"><i class="bi bi-facebook"></i> Bienvenue sur Mini Facebook</h1>
            <p class="lead">Partagez vos pensées, commentez et aimez les posts de vos amis !</p>
            <hr class="my-4">
            <p>Connectez-vous ou créez un compte pour commencer.</p>
            <a class="btn btn-primary btn-lg me-2" href="{{ path('app_login') }}" role="button">
                <i class="bi bi-box-arrow-in-right"></i> Connexion
            </a>
            <a class="btn btn-outline-primary btn-lg" href="{{ path('app_register') }}" role="button">
                <i class="bi bi-person-plus"></i> Inscription
            </a>
        </div>
    </div>
</div>
{% endif %}
{% endblock %}
