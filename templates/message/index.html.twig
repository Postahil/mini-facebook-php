{% extends 'base.html.twig' %}

{% block title %}Messages - Mini Facebook{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-4">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h5><i class="bi bi-chat-dots"></i> Conversations</h5>
                {% if unreadCount > 0 %}
                    <span class="badge bg-danger">{{ unreadCount }} non lus</span>
                {% endif %}
            </div>
            <div class="card-body p-0">
                {% if conversations is empty %}
                    <div class="p-3 text-center text-muted">
                        <i class="bi bi-inbox"></i> Aucune conversation
                    </div>
                {% else %}
                    <div class="list-group list-group-flush">
                        {% for conversationPartner in conversations %}
                            <a href="{{ path('app_messages_conversation', {id: conversationPartner.id}) }}" class="list-group-item list-group-item-action">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>{{ conversationPartner.getFullName() }}</strong>
                                        <small class="text-muted d-block">{{ conversationPartner.email }}</small>
                                    </div>
                                    <i class="bi bi-chevron-right"></i>
                                </div>
                            </a>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
        <div class="card shadow mt-3">
            <div class="card-body">
                <p class="text-muted small mb-0">
                    <i class="bi bi-info-circle"></i> Vous ne pouvez envoyer des messages qu'à vos amis.
                    <a href="{{ path('app_friends_search') }}">Rechercher des amis</a>
                </p>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-body text-center text-muted">
                <i class="bi bi-chat-left-text" style="font-size: 4rem;"></i>
                <p class="mt-3">Sélectionnez une conversation pour commencer à discuter</p>
                {% if conversations is empty %}
                    <a href="{{ path('app_friends') }}" class="btn btn-primary">
                        <i class="bi bi-people"></i> Voir mes amis
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
